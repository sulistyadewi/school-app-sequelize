<%- include('partial/headAddStudent.ejs') %>
  <body>
    <div class="container">
      <form action="/student/<%= students.id %>/edit" method="POST">
        <div>
          <label for="">First Name</label>
          <input
            type="text"
            name="first_name"
            value="<%= students.first_name %>"
          />
        </div>
        <div>
          <label for="">Last Name</label>
          <input
            type="text"
            name="last_name"
            value="<%= students.last_name %>"
          />
        </div>
        <div>
          <label for="">Email</label>
          <input type="email" name="email" value="<%= students.email %>" />
        </div>
        <div>
          <label for="">Gender</label>
          <select name="gender" id="gender" >
            <!-- <option value="select">Choose One</option> -->
            <option value="Male"<%= students.gender==='Male'?'selected':'' %>>Male</option>
            <option value="Female"<%= students.gender==='Female'?'selected':'' %>>Female</option>
          </select>
        </div>
        <div>
          <label for="">Birth Date</label>
          <input
            type="date"
            name="birth_date"
            id="date"
            value="<%= students.birth_date %>"
          />
        </div>
        <input class="button-edit" type="submit" value="Edit Student" />
      </form>
    </div>
  </body>
</html>
